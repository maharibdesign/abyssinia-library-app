---
// src/components/NavBar.astro
---
<header>
  <nav>
    <!-- These links will be made functional in later steps -->
    <a href="javascript:history.back()" class="nav-button">Back</a>
    <a href="/" class="nav-button">Home</a>
    <a href="/favorites" class="nav-button">Favorites</a>
    <a href="https://t.me/abyssinialibrary" target="_blank" rel="noopener noreferrer" class="nav-button subscribe">Subscribe</a>
  </nav>
</header>

<style>
  header {
    position: fixed; /* Fixes the nav bar to the top */
    top: 0;
    left: 0;
    width: 100%;
    background-color: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    z-index: 10;
    padding: 1rem 0;
  }

  nav {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between; /* Spreads the buttons out */
    align-items: center;
  }

  .nav-button {
    color: var(--color-text);
    background-color: var(--color-card-bg);
    padding: 8px 16px;
    border-radius: 6px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s;
  }

  .nav-button:hover {
    background-color: var(--color-border);
    text-decoration: none;
  }

  .nav-button.subscribe {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }
</style>